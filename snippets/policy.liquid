{% comment %}
  Renders policy text

  Accepts:
  - content: page from

  Usage:
  {% render 'policy' content: content %}
{% endcomment %}

<style>
  .shopify-policy__body > div > ul {
    list-style: disc;
    padding: 0 2rem;
    list-style-position: outside;
  }
  .shopify-policy__body > div > ol {
    list-style: decimal;
    padding: 0 2rem;
    list-style-position: outside;
  }
  .shopify-policy__container {
    font-size: calc(var(--font-body-scale) * 85%);
    background-color: white;
    padding-left: 1.5rem /* 24px */;
    padding-right: 1.5rem /* 24px */;
    padding-top: 2rem /* 128px */;
    padding-bottom: 2rem /* 128px */;
  }
  @media (min-width: 64em/* 1024px */) {
    .shopify-policy__container {
      padding-left: 2rem /* 32px */;
      padding-right: 2rem /* 32px */;
    }
  }
  .shopify-policy__body > div {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    margin-left: auto;
    margin-right: auto;
    max-width: 64rem /* 768px */;
    font-size: 1rem /* 16px */;
    line-height: 1.75rem /* 28px */;
    --tw-text-opacity: 1;
    color: rgb(55 65 81 / var(--tw-text-opacity));
    overflow-x: hidden;
  }
  .shopify-policy__body > div > :not([hidden]) ~ :not([hidden]) {
    --tw-space-y-reverse: 0;
    margin-top: calc(2rem /* 16px */ * calc(1 - var(--tw-space-y-reverse)));
    margin-bottom: calc(2rem /* 16px */ * var(--tw-space-y-reverse));
  }
  .shopify-policy__title > h1 {
    text-align: center;
  }
</style>

<div>
  {{ content }}
</div>
