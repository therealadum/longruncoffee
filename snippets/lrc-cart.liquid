                for (let i = 0; i < newItems.length; i++) {
                    if (newItems[i].variantID === item.variantID) {
                        index = i;
                    }
                }
                if (index === null) {
                    console.error("could not remove item.");
                    return;
                }
                if (state.editQuantity === 0) {
                    newItems.splice(index, 1)
                } else {
                    newItems[index].quantity = state.editQuantity;
                }
                setState({
                    ...state,
                    loading: false,
                    isEditing: false
                });
                setCartState({
                    ...cartState,
                    items: newItems
