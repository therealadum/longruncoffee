                            })
                        });
                        const newCart = await getCart();
                        setCart(newCart);
                        resolve();
                    }))
                    const handler = async () => {
                        await Promise.all(promises);
                        setCartState({
                            ...cartState,
                            items: newCartItems
                        })
                    }
                    handler();
                }
            } else {
