                                                    totalSubscriptionItems > 0 && todayRightNow > promotion_start_date && todayRightNow < promotion_end_date ? <BonusItem key={5} title="Club Exclusive - Summer Stroopwafel" href="/products/summer-stroopwafel" header="Items added post-purchase" image="https://cdn.shopify.com/s/files/1/0761/6924/9081/files/Stroop.png?v=1721164775" /> : null
                                                }
                                                {
                                                    totalSubscriptionItems > 2 ? <BonusItem key={2} title="Club Exclusive - LRC x YETI Tumbler" href="/products/club-exclusive-lrc-x-yeti-tumbler-1" header="Shipped after 3rd fulfillment" image="https://cdn.shopify.com/s/files/1/0761/6924/9081/files/1_0b4419a0-4d8f-4a4a-bb5e-cb3ac2715b72.png?v=1715952235&width=150" /> : null
                                                }
                                                {
