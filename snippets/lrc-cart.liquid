        })
    })
  }

  const FREE_STICKER_VARIANT_ID = 48056421482809;
  const FREE_TRAVEL_SET_VARIANT_ID = 49182276747577;
  function useCartBot(subscriptionState, cart, setCartState, setCart) {
    const { items: subscriptionItems } = subscriptionState;
    const { items: oneTimeItems } = cart;

    let cartTotal = 0;
    subscriptionItems.forEach(product => {
        cartTotal += product.variant.price;
    })
    let free_travel_set_present_in_cart = false;
    let sticker_present_in_cart = false;
    let free_boco_in_cart = false;
    oneTimeItems.forEach(product => {
        cartTotal += product.price;
        if (product.id == FREE_STICKER_VARIANT_ID) {
            sticker_present_in_cart = true;
        }
        if (product.id == FREE_TRAVEL_SET_VARIANT_ID) {
            free_travel_set_present_in_cart = true;
        }
        if (product.variant_id == 49364569588025) {
            free_boco_in_cart = true;
        }
    })

    React.useEffect(() => {
        if (cartTotal >= 399) {
            const items = [];
            if (!sticker_present_in_cart) {
                items.push({
                    id: FREE_STICKER_VARIANT_ID,
                    quantity: 1
                })
            }
            if (!free_travel_set_present_in_cart && !free_boco_in_cart) {
                items.push({
                    id: FREE_TRAVEL_SET_VARIANT_ID,
                    quantity: 1
                })
            }
            if (free_boco_in_cart) {
                const vo = {};
                vo[FREE_TRAVEL_SET_VARIANT_ID] = 0;
                updateItems(vo)
                .then(async response => {
                    addItems(items)
                    .then(async response => {
                        const newCart = await getCart();
                        setCart(newCart);
                    })
                })
                return;
            }
            if (!items.length) {
                return;
            }
            addItems(items)
            .then(async response => {
                const newCart = await getCart();
                setCart(newCart);
            })
        } else {
            if (!free_travel_set_present_in_cart && !sticker_present_in_cart) {
                return;
            }
            const vo = {};
            if (sticker_present_in_cart) {
                vo[FREE_STICKER_VARIANT_ID] = 0;
            }
            if (free_travel_set_present_in_cart) {
                vo[FREE_TRAVEL_SET_VARIANT_ID] = 0;
            }
            updateItems(vo)
            .then(async response => {
                const newCart = await getCart();
                setCart(newCart);
            })
        }
    }, [cartTotal, sticker_present_in_cart, free_travel_set_present_in_cart])
  }

  function removeAddToCartURLParameters() {
    if (window.history) {
        window.history.replaceState({}, document.title, window.location.href.split('?')[0])
    }
  }

  function useAddToCartURL(subscriptionState, cart, setCartState, setCart, setIsOpen, totalSubscriptionItems) {
    const { items: subscriptionItems } = subscriptionState;
    const { items: oneTimeItems } = cart;
    const [shouldCheckout, setShouldCheckout] = React.useState(false)
    const params = new Proxy(new URLSearchParams(window.location.search), {
        get: (searchParams, prop) => searchParams.get(prop),
    });

    React.useEffect(() => {
        if (shouldCheckout) {
            setShouldCheckout(false)
            if (!(subscriptionState.items.length && totalSubscriptionItems > 1 || subscriptionState.items.length == 0)) {
                setIsOpen(true);
                return;
            }
            window.location.href = '/checkout'
        }
    }, [shouldCheckout])

    React.useEffect(async () => {
        let mounted = true;
        if (Boolean(params.add_to_cart_variant_id && params.add_to_cart_product_hash)) {
            let quantity = 1;
            if (params.add_to_cart_quantity) {
                quantity = parseInt(params.add_to_cart_quantity);
            }

            let subscription = false;
            if (params.add_to_cart_is_subscription) {
                subscription = true;
            }

            let max_add_to_cart = quantity;
            if (params.add_to_cart_max) {
                max_add_to_cart = parseInt(params.add_to_cart_max);
            }

            let shouldCheckoutParam = false;
            if (params.add_to_cart_checkout) {
                shouldCheckoutParam = true;
            }
            try {
                const data = await fetch(window.Shopify.routes.root + `products/${params.add_to_cart_product_hash}.js`);
                const product = await data.json();
                
                // prevent additions if unmounted or product is not available
                if (!mounted) {
                    return;
                }
                if (!product.available) {
                    removeAddToCartURLParameters()
                    return;
                }
                    
                if (subscription) {
                    let variant;
                    for (let j = 0; j < product.variants.length; j++) {
                        if (product.variants[j].id == params.add_to_cart_variant_id) {
                            variant = product.variants[j];
                        }
                    }
                    const item = {
                        product,
                        variantID: params.add_to_cart_variant_id,
                        variant,
                        quantity
                    }

                    // if already in subscriptions, add quantity - otherwise add new item
                    let existingItemIndex = null;
                    for (let j = 0; j < subscriptionItems.length; j++) {
                        if (subscriptionItems[j].variantID === item.variantID) {
                            existingItemIndex = j;
                        }
                    }

                    if (await klaviyo.isIdentified()) {
                        // report to klayvio
                        klaviyo.push(['track', 'add_subscription_item_to_cart', {
                            'product_id' : product.id,
                            'variant_id': params.add_to_cart_variant_id,
                            'quantity': quantity
                        }]);
                    }

                    removeAddToCartURLParameters()
                    
                    if (existingItemIndex != null) {
                        if (newItems[existingItemIndex].quantity + quantity > max_add_to_cart) {
                            document.dispatchEvent(new CustomEvent('buy_button_complete'))
                            return;
                        }
                        const newItems = [...subscriptionState.items];
                        newItems[existingItemIndex].quantity += quantity;
                        setCartState({
                            ...subscriptionState,
                            items: newItems
                        })
                    } else {
                        setCartState({
                            ...subscriptionState,
                            items: [...subscriptionItems, {
                                ...item,
                                quantity
                            }]
                        })
                    }
                    if (shouldCheckoutParam) {
                        setShouldCheckout(true)
                    } else {
                        setIsOpen(true);
                    }
                    document.dispatchEvent(new CustomEvent('buy_button_complete'))
                } else {
                    let existingItemQuantity = 0;
                    oneTimeItems.forEach(item => {
                        if (item.variant_id == params.add_to_cart_variant_id) {
                            existingItemQuantity = item.quantity;
                        }
                    });
                    removeAddToCartURLParameters();

                    if (!mounted || existingItemQuantity + quantity > max_add_to_cart) {
                        document.dispatchEvent(new CustomEvent('buy_button_complete'))
                        return;
                    }

                    fetch(window.Shopify.routes.root + 'cart/add.js', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            items: [{
                                'id': params.add_to_cart_variant_id,
                                quantity
                            }]
                        })
                    })
                    .then(async response => {
                        const newCart = await getCart();
                        setCart(newCart);
                        if (shouldCheckoutParam) {
                            setShouldCheckout(true)
                        } else {
                            setIsOpen(true);
                        }
                        document.dispatchEvent(new CustomEvent('buy_button_complete'));
                    })
                }
            } catch (e) {
                console.error(e);
                document.dispatchEvent(new CustomEvent('buy_button_complete'));
            }
        }
        return () => {
            mounted = false;
        }
    }, [oneTimeItems.length, subscriptionItems.length, params.add_to_cart_variant_id, params.add_to_cart_checkout, params.add_to_cart_product_hash, params.add_to_cart_is_subscription, params.add_to_cart_quantity])
  }

