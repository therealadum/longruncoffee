                const promises = [];
                promises.push(new Promise(async (resolve, reject) => {
                    const vo = {};
                    cartItemsWithSellingPlans.forEach(ca => {
                        vo[ca.variant_id] = 0;
                    });
                    await fetch(window.Shopify.routes.root + 'cart/update.js', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            updates: vo
                        })
                    });
                    const newCart = await getCart();
                    setCart(newCart);
                    resolve();
