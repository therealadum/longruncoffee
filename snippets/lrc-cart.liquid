                }
            }

            const selections = [];
            const selectionKeys = Object.keys(selectionMap);
            for (let i = 0; i < selectionKeys.length; i++) {
                selections.push(selectionMap[selectionKeys[i]])
            }

            if (bundleVariantId && bundleSellingPlan && selections) {
