                                }
                            </button>
                        </div>
                    </div>
                    </div>
                </div>
                </div>
            </div>
            </div>
        </div>
    </React.Fragment>
  }

  ReactDOM.render(<LRCCart />, document.getElementById('lrc-cart'));
</script>
