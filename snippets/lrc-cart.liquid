  function checkoutStatus(cartState, cart, plan) {
    if (cartState.items.length && !plan) {
        return 'SUBSCRIBE_AND_SAVE_MINIMUM_BAG_COUNT';
    } else if (cartState.items.length && plan) {
        return 'OKAY';
