<div>{{ section.settings.title }}</div>
<img src="{{ section.settings.image | image_url: width: 500}}" width="500" height="500">
{% schema %}
{
  "name": "lrc-hero-image",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Electrolyte infused coffee for athletes"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ]
}
{% endschema %}
